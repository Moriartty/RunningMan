<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.moriarty.user.runningman.Activity.Initiate_Activities"
    tools:showIn="@layout/add_activities_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_divider_size"
            android:background="@color/lightgray" />
        <LinearLayout
            android:layout_height="55dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/ic_menu_activity_title"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="活动主题"
                android:ems="2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/topic_of_activity"
                android:layout_marginTop="5dp"
                tools:ignore="LabelFor" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_divider_size"
            android:background="@color/lightgray" />
        <LinearLayout
            android:layout_height="55dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/ic_menu_activity_time"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="活动时间"
                android:ems="2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/startdate_of_activity"
                    android:text="选择日期"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:paddingLeft="35dp"
                    android:paddingTop="18dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/starttime_of_activity"
                    android:text="选择时间"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:paddingLeft="35dp"
                    android:paddingTop="18dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_divider_size"
            android:background="@color/lightgray" />
        <LinearLayout
            android:layout_height="55dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/ic_menu_activity_address"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="活动地点"
                android:ems="2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"/>
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/address_of_activity"
                android:layout_marginTop="8dp"
                tools:ignore="LabelFor" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_divider_size"
            android:background="@color/lightgray" />
        <LinearLayout
            android:layout_height="55dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/ic_menu_phone"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="联系电话"
                android:ems="2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black" />
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/phone_of_contact"
                android:layout_marginTop="8dp"
                android:inputType="phone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_divider_size"
            android:background="@color/lightgray" />
        <LinearLayout
            android:layout_height="55dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/ic_menu_group"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="参与人员"
                android:ems="2"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/selectPeople"
                android:layout_weight="1"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0.5dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="选择人员"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/reviewPeople"
                android:layout_weight="1"
                android:layout_margin="7dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0.5dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="查看人员"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_divider_size"
            android:background="@color/lightgray" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/ic_menu_activity_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="活动内容"
                android:ems="2"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/details_of_activity"
                android:layout_margin="5dp"
                android:enabled="true"
                android:gravity="top"
                android:minLines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:background="@drawable/text_area"/>
        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>