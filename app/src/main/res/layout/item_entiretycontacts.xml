<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_item">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <TextView
        android:id="@+id/catalog_in_chooseContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:paddingLeft="5sp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text=" A"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@id/catalog_in_chooseContacts"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="1dp">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content">
                <com.moriarty.user.runningman.User_Defind.CircleImageView
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_margin="2dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"
                    android:id="@+id/contacts_img_in_checkbox"/>
                <TextView
                    android:id="@+id/contacts_name_in_checkbox"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/delete_contact"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_menu_moreoverflow_normal_holo_light"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
                <CheckBox
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/contacts_checkbox"
                    android:textSize="15sp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>